#!/usr/bin/env bash

rp() { cd "$1" >/dev/null 2>&1 && pwd; }
__DIR__=$(rp "$(dirname "${BASH_SOURCE[0]}")")
PUBLIC_DIR=$(rp "$__DIR__/..")

SCSS_DIR="$PUBLIC_DIR/src/scss"
CSS_DIR="$PUBLIC_DIR/static/css"


[ "$1" == "deploy" ] && OPTIONS="--no-source-map" || OPTIONS="--source-map --watch"


rm -f "$CSS_DIR"/main.css*
sass $OPTIONS "$SCSS_DIR/main.scss":"$CSS_DIR/main.css"
